# WhatsApp Cloud API Credentials
# Get these from: https://developers.facebook.com/apps

# Your WhatsApp Phone Number ID
WA_PHONE_ID=your_phone_number_id_here

# Your WhatsApp Business Account Access Token
WA_TOKEN=your_access_token_here

# Webhook Verify Token (set this yourself, any random string)
WA_VERIFY_TOKEN=your_random_verify_token_here

# Server Configuration
WEBHOOK_URL=https://your-ngrok-url.ngrok.io
PORT=5000

# Optional: Webhook secret for signature verification
WA_APP_SECRET=your_app_secret_here

# Google Gemini API Keys (comma separated)
GOOGLE_GEMINI_API_KEYS=your_api_key_1,your_api_key_2,your_api_key_3

# WhatsApp Target Number
WHATSAPP_TARGET_NUMBER=+62XXXXXXXXXXXX

# AI Enhancement
USE_AI_ENHANCEMENT=True

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID (for auto-send images)
# Get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here
